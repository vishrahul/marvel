<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">





                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/add_lnr_date"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >


                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:text="Name    :"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <EditText
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/ed_name"
                        android:hint="Name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/add_lnr_date2"
                    android:layout_below="@+id/add_lnr_date"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    >


                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:text="Details    :"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <EditText
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/ed_detail"
                        android:hint="Details"
                        android:inputType="textMultiLine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </LinearLayout>



                <LinearLayout
                    android:layout_below="@+id/add_lnr_date2"
                    android:weightSum="2"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/add_lnr_photo"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    >


                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textSize="15dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimary"
                        android:text="Add Photo     :"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_weight="1"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:src="@drawable/ic_launcher_background"
                        android:id="@+id/ed_img"

                        />


                </LinearLayout>













                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:layout_below="@+id/add_lnr_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:background="@color/colorPrimary"
                        android:id="@+id/btn_save"
                        android:gravity="center"
                        android:text="Update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>





</RelativeLayout>












